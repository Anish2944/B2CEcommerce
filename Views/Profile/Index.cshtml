@model Microsoft.AspNetCore.Identity.IdentityUser

<h2>My Profile</h2>

<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Username:</strong> @Model.UserName</p>
@if (User.IsInRole("Admin"))
{
    <p><strong>Role:</strong> Admin</p>
}
else
{
    <p><strong>Role:</strong> Customer</p>
}

@if (!User.IsInRole("Admin"))
{
    <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">My Orders</a>
    <a asp-controller="Wishlist" asp-action="Index" class="btn btn-warning">My Wishlist</a>
}
