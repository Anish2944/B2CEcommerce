@model B2CEcommerceApp.Models.Category

@{
    ViewData["Title"] = "Category details";
}

<section class="page-section">
    <div class="container py-5">
        <div class="mb-4">
            <a asp-action="Index" class="btn btn-outline-primary btn-sm"><i class="bi bi-arrow-left"></i> Back to categories</a>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card card-lift p-4">
                    <span class="badge-soft mb-3">Category ID: @Model.Id</span>
                    <h1 class="h4 fw-bold mb-3">@Model.Name</h1>
                    <p class="text-secondary">This category groups related products so shoppers can quickly find what they need. Add rich descriptions and imagery to products for a cohesive experience.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg">Edit category</a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger btn-lg">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
