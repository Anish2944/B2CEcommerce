@model B2CEcommerceApp.Models.Category

@{
    ViewData["Title"] = "Delete category";
}

<section class="page-section">
    <div class="container py-5">
        <div class="mb-4">
            <a asp-action="Index" class="btn btn-outline-primary btn-sm"><i class="bi bi-arrow-left"></i> Back to categories</a>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card card-lift p-4 border-danger border-opacity-25">
                    <div class="alert alert-danger-soft mb-4" role="alert">
                        <strong>Heads up!</strong> Deleting a category will remove it from all products currently assigned to it.
                    </div>
                    <h1 class="h4 fw-bold mb-3">Delete @Model.Name?</h1>
                    <p class="text-secondary">This action cannot be undone. Make sure the products within this category have been reassigned if necessary.</p>
                    <form asp-action="Delete" class="d-flex flex-column gap-3 mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-danger btn-lg">Yes, delete</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
