@model B2CEcommerceApp.Models.Category

@{
    ViewData["Title"] = "Create category";
}

<section class="page-section">
    <div class="container py-5">
        <div class="mb-4">
            <a asp-action="Index" class="btn btn-outline-primary btn-sm"><i class="bi bi-arrow-left"></i> Back to categories</a>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card card-lift p-4">
                    <h1 class="h4 fw-bold mb-3">Create a new category</h1>
                    <p class="text-secondary mb-4">Group similar products together to make it easier for shoppers to browse.</p>
                    <form asp-action="Create" class="d-flex flex-column gap-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div>
                            <label asp-for="Name" class="form-label fw-semibold">Category name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g. Summer Essentials" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">Save category</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
