@model IEnumerable<B2CEcommerceApp.Models.Order>

<h2>My Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
                <td><a asp-action="Details" asp-route-id="@order.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>
