@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var userName = UserManager.GetUserName(User) ?? "Account";
    var initials = !string.IsNullOrWhiteSpace(userName) ? userName.Trim()[0].ToString().ToUpperInvariant() : "A";
    <div class="dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="avatar-circle bg-primary text-white">@initials</span>
            <span class="ms-2 d-none d-lg-inline fw-semibold">@userName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Account settings</a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profile</a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">Sign out</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-outline-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Create account</a>
    </div>
}
