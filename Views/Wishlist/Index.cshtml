@model IEnumerable<B2CEcommerceApp.Models.WishlistItem>
@using System.Linq

@{
    ViewData["Title"] = "My Wishlist";
    var wishlistItems = Model ?? Enumerable.Empty<B2CEcommerceApp.Models.WishlistItem>();
    var hasItems = wishlistItems.Any();
}

<section class="page-section">
    <div class="container py-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3 mb-5">
            <div>
                <span class="hero-badge">Saved for later</span>
                <h1 class="section-title mt-3 mb-2">Your wishlist</h1>
                <p class="text-secondary mb-0">Keep track of favourites and move them to your cart whenever you like.</p>
            </div>
            @if (hasItems)
            {
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">Browse more products</a>
            }
        </div>

        @if (!hasItems)
        {
            <div class="empty-state">
                <h3 class="fw-semibold mb-2">No favourites yet</h3>
                <p class="text-secondary mb-4">Tap the heart icon on a product to save it to your wishlist and revisit any time.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">Discover products</a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in wishlistItems)
                {
                    var product = item.Product;
                    var imageUrl = product?.ImageUrl;
                    if (string.IsNullOrWhiteSpace(imageUrl))
                    {
                        imageUrl = "https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=400&q=80";
                    }
                    <div class="col-md-6 col-lg-4">
                        <div class="card card-lift h-100 position-relative">
                            <div class="ratio ratio-4x3 bg-light">
                                <img src="@imageUrl" alt="@product?.Name" class="object-fit-cover" onerror="this.src='https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=400&q=80';" />
                            </div>
                            <div class="card-body d-flex flex-column">
                                <span class="badge-soft mb-3">Wishlist pick</span>
                                <h2 class="h5 fw-semibold">@product?.Name</h2>
                                <p class="text-secondary flex-grow-1">@product?.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-3 position-relative z-1">
                                    <span class="fw-bold text-primary fs-5">@((product?.Price ?? 0M).ToString("C"))</span>
                                    <div class="d-flex gap-2">
                                        <form asp-controller="Cart" asp-action="Add" method="post">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-primary btn-sm">Add to cart</button>
                                        </form>
                                        <form asp-action="Remove" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button class="btn btn-outline-primary btn-sm">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId" class="stretched-link" aria-label="View @product?.Name details"></a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
