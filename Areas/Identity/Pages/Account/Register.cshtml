@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="auth-section">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card card-lift overflow-hidden">
                    <div class="row g-0 flex-row-reverse">
                        <div class="col-lg-6 auth-illustration text-white p-5">
                            <span class="hero-badge bg-white text-primary mb-3">Join the club</span>
                            <h1 class="display-6 fw-bold mb-3">Create your account</h1>
                            <p class="lead mb-4">Build wishlists, unlock loyalty rewards, and stay up to date with the latest drops.</p>
                            <ul class="list-unstyled text-white-50 small d-flex flex-column gap-2">
                                <li><i class="bi bi-check-circle-fill me-2"></i>Free shipping on your first order</li>
                                <li><i class="bi bi-check-circle-fill me-2"></i>Priority access to seasonal launches</li>
                                <li><i class="bi bi-check-circle-fill me-2"></i>Cancel anytime from your profile</li>
                            </ul>
                        </div>
                        <div class="col-lg-6 p-5">
                            <h2 class="h3 fw-bold mb-3">Sign up</h2>
                            <p class="text-secondary mb-4">It only takes a minute to get started. All fields are required.</p>
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div>
                                    <label asp-for="Input.Email" class="form-label fw-semibold">Email address</label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="you@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="At least 6 characters" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div>
                                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm password</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="Repeat password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Create account</button>
                            </form>

                            <div class="mt-4">
                                <p class="text-secondary">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a></p>
                            </div>

                            @{ if ((Model.ExternalLogins?.Count ?? 0) > 0)
                               {
                                   <div class="mt-5">
                                       <div class="text-uppercase small fw-semibold text-secondary mb-3">Or sign up with</div>
                                       <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-3">
                                           @foreach (var provider in Model.ExternalLogins!)
                                           {
                                               <button type="submit" class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center gap-2" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                                   <i class="bi bi-shield-lock"></i> @provider.DisplayName
                                               </button>
                                           }
                                       </form>
                                   </div>
                               }
                               else
                               {
                                   <div class="mt-5 text-secondary small">
                                       External authentication providers are not configured yet.
                                   </div>
                               }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
