@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="auth-section">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card card-lift overflow-hidden">
                    <div class="row g-0">
                        <div class="col-lg-6 auth-illustration text-white p-5">
                            <span class="hero-badge bg-white text-primary mb-3">Welcome back</span>
                            <h1 class="display-6 fw-bold mb-3">Sign in to continue shopping</h1>
                            <p class="lead mb-4">Access personalised recommendations, track your orders in real-time, and sync your wishlist across devices.</p>
                            <ul class="list-unstyled text-white-50 small d-flex flex-column gap-2">
                                <li><i class="bi bi-check-circle-fill me-2"></i>Exclusive member-only offers every week</li>
                                <li><i class="bi bi-check-circle-fill me-2"></i>Fast checkout with saved preferences</li>
                                <li><i class="bi bi-check-circle-fill me-2"></i>Secure two-step verification support</li>
                            </ul>
                        </div>
                        <div class="col-lg-6 p-5">
                            <h2 class="h3 fw-bold mb-3">Log in</h2>
                            <p class="text-secondary mb-4">Use your email and password to enter the dashboard.</p>
                            <form id="account" method="post" class="d-flex flex-column gap-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div>
                                    <label asp-for="Input.Email" class="form-label fw-semibold">Email address</label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="you@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <label asp-for="Input.Password" class="form-label fw-semibold mb-0">Password</label>
                                        <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot?</a>
                                    </div>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="********" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                                </div>
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                            </form>

                            <div class="mt-4">
                                <p class="text-secondary">New here? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a></p>
                            </div>

                            @{ if ((Model.ExternalLogins?.Count ?? 0) > 0)
                               {
                                   <div class="mt-5">
                                       <div class="text-uppercase small fw-semibold text-secondary mb-3">Or continue with</div>
                                       <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-3">
                                           @foreach (var provider in Model.ExternalLogins!)
                                           {
                                               <button type="submit" class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center gap-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                   <i class="bi bi-shield-lock"></i> @provider.DisplayName
                                               </button>
                                           }
                                       </form>
                                   </div>
                               }
                               else
                               {
                                   <div class="mt-5 text-secondary small">
                                       External authentication providers are not configured yet.
                                   </div>
                               }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
